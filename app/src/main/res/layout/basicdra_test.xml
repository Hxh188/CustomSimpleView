<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#e0e0e0">

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="10dp"
        android:gravity="center_horizontal"
        android:showDividers="middle"
        android:divider="@drawable/basicdra_shape_divider_horizontal_dash"
        android:layerType="software"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="test"
            android:gravity="center"
            android:clickable="true"
            android:background="@drawable/basicdra_shape_round_white"
            android:layout_marginTop="5dp"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="test"
            android:gravity="center"
            android:clickable="true"
            android:background="@drawable/basicdra_shape_round_border_gray"
            android:layout_marginTop="5dp"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="test"
            android:gravity="center"
            android:clickable="true"
            android:background="@drawable/basicdra_selector_white"
            android:layout_marginTop="5dp"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="test"
            android:gravity="center"
            android:textColor="@color/white"
            android:clickable="true"
            android:background="@drawable/basicdra_selector_round_colorprimary"
            android:layout_marginTop="5dp"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="test"
            android:gravity="center"
            android:textColor="@color/white"
            android:clickable="true"
            android:background="@drawable/basicdra_selector_circle_colorprimary"
            android:layout_marginTop="5dp"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="test"
            android:gravity="center"
            android:textColor="@color/colorPrimary"
            android:clickable="true"
            android:background="@drawable/basicdra_selector_round_border_colorprimary"
            android:layout_marginTop="5dp"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="test"
            android:gravity="center"
            android:textColor="@color/colorPrimary"
            android:clickable="true"
            android:background="@drawable/basicdra_selector_circle_border_colorprimary"
            android:layout_marginTop="5dp"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="test"
            android:gravity="center"
            android:textColor="@drawable/basicdra_selector_text_color"
            android:clickable="true"
            android:layout_marginTop="5dp"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
        android:orientation="horizontal">
            <com.hxh.simpleview_lib.basicdrawable.txt.IconFontTextView
                android:id="@+id/action_back"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:paddingLeft="@dimen/spacing_medium"
                android:paddingRight="10dp"
                android:text="@string/txt_back"
                android:textColor="@color/colorPrimary"
                android:textSize="20sp"/>

            <com.hxh.simpleview_lib.basicdrawable.txt.IconFontTextView
                android:id="@+id/action_cancel"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_toRightOf="@id/action_back"
                android:gravity="center"
                android:paddingLeft="10dp"

                android:paddingRight="@dimen/spacing_medium"
                android:text="@string/txt_close"
                android:textColor="@color/colorPrimary"
                android:textSize="20sp"/>
        </LinearLayout>

        <com.hxh.simpleview_lib.app.ProtocalView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <com.hxh.simpleview_lib.app.VerifyCodeTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="发送验证码"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:paddingTop="3dp"
            android:paddingBottom="3dp"
            android:textColor="@color/colorPrimary"
            android:background="@drawable/basicdra_selector_circle_border_colorprimary"
            android:onClick="sendVerify"
            />

        <com.hxh.simpleview_lib.app.SettingLineView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:setting_title="版本号"
            app:setting_subtitle=""
            app:setting_right_text="v1.0"
            app:setting_right_icon_visible="true"
            android:background="#00ff00"
            />
    </LinearLayout>
</androidx.core.widget.NestedScrollView>